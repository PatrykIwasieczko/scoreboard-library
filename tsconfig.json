{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "composite": true,
    "declaration": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [".src/*"],
      "@": [".src"]
    }
  },
  "include": ["src/**/*", "src/index.ts"],
  "exclude": ["node_modules", "build"]
}
